{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": ["pedigree"],
  "properties": {
    "pedigree": { "$ref": "#/definitions/pedigree" },
    "schemaExtension": { "$ref": "http://json-schema.org/draft-04/schema#" },
    "symbol": { "$ref": "#/definitions/symbol" }
  },
  "definitions": {
    "pedigree": {
      "title": "Pedigree",
      "description": "Schema for Pedigree",
      "type": "object",
      "required": ["members", "nests"],
      "properties": {
        "title": {
          "title": "Title",
          "type": "string"
        },
        "members" : {
          "title": "Members",
          "description": "Members in a pedigree.",
          "type": "object",
          "patternProperties": {
            "^[^,]+$": { "$ref": "#/definitions/member" }
          },
          "additionalProperties": false
        },
        "nests": {
          "title": "Nests",
          "description": "Relationship units in a pedigree.",
          "type": "object",
          "patternProperties": {
            "^[^,]+(,[^,]+)*$": { "$ref": "#/definitions/nest" }
          },
          "additionalProperties": false
        }
      }
    },
    "member": {
      "title": "Member",
      "type": "object",
      "properties": {
        "gender": {
          "title": "Gender",
          "type": "integer",
          "enum": [0, 1, 2],
          "enumNames": ["Unknown or ambiguous", "Male", "Female"]
        },
        "proband": {
          "title": "Proband",
          "type": "boolean"
        },
        "consultand": {
          "title": "Consultand",
          "type": "boolean"
        },
        "dateOfBirth": {
          "title": "Date of birth",
          "type": "string",
          "format": "date"
        },
        "dateOfDeath": {
          "title": "Date of death",
          "type": "string",
          "format": "date"
        },
        "deceased": {
          "title": "Deceased",
          "type": "boolean"
        }
      }
    },
    "nest": {
      "title": "Nest",
      "type": "object",
      "required": ["pregnancies"],
      "properties": {
        "pregnancies": {
          "title": "Pregnancies",
          "type": "array",
          "items": { "$ref": "#/definitions/pregnancy" }
        },
        "consanguineous": {
          "title": "Consanguineous",
          "type": "boolean"
        }
      }
    },
    "pregnancy": {
      "title": "Pregnancy",
      "type": "object",
      "required": ["children"],
      "properties": {
        "children": {
          "title": "Children",
          "type": "array",
          "items": {
            "title": "Child",
            "type": "string",
            "pattern": "^[^,]+$"
          }
        },
        "zygotes": {
          "title": "Zygotes",
          "type": "array",
          "items": {
            "title": "Zygote",
            "type": "integer"
          }
        }
      }
    },
    "symbol": {
      "title": "symbol",
      "type": "object",
      "description": "symbol for affected members.",
      "properties": {
        "scheme": {
          "title": "Symbol scheme",
          "description": "The scheme used to divide the symbol into multiple areas.",
          "type": "integer",
          "minimum": 0,
          "maximum": 7
        },
        "color": {
          "titile": "Symbol colors",
          "description": "Colors used in the symbol.",
          "type": "array",
          "items": {
            "type": "string",
            "description": "Color for each divided area.",
            "format": "color"
          },
          "maxItems": 4
        },
        "mapping": {
          "title": "Symbol mappings",
          "description": "Fields used to construct a symbol.",
          "type": "array",
          "items": {
            "type": "string",
            "description": "Name of the field for deciding if an area should be filled."
          },
          "maxItems": 4
        },
        "pattern": {
          "title": "Symbol patterns",
          "description": "Patterns used in the symbol.",
          "type": "array",
          "items": {
            "type": "string",
            "description": "Fill pattern for each divided area.",
            "enum": ["solid", "dotted", "vertical", "horizontal"]
          },
          "maxItems": 4
        }
      },
      "additionalProperties": false
    }
  }
}

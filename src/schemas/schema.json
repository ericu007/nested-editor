{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": ["pedigree"],
  "properties": {
    "pedigree": { "$ref": "#/definitions/pedigree" },
    "schemaExtension": { "$ref": "http://json-schema.org/draft-04/schema#" }
  },
  "definitions": {
    "pedigree": {
      "title": "Pedigree",
      "description": "Schema for Pedigree",
      "type": "object",
      "required": ["members", "nests"],
      "properties": {
        "title": {
          "title": "Title",
          "type": "string"
        },

        "symbol": {
          "title": "symbol",
          "type": "object",
          "properties": {
            "scheme": {
              "title": "Symbol scheme",
              "type": "integer"
            },
            "color": {
              "titile": "Symbol color",
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "mapping": {
              "title": "Symbol mapping",
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "pattern": {
              "title": "Symbol pattern",
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["solid", "dotted"]
              }
            }
          },
          "additionalProperties": false
        },

        "members" : {
          "title": "Members",
          "description": "Members in a pedigree.",
          "type": "object",
          "patternProperties": {
            "^[^,]+$": { "$ref": "#/definitions/member" }
          },
          "additionalProperties": false
        },
        "nests": {
          "title": "Nests",
          "description": "Relationship units in a pedigree.",
          "type": "object",
          "patternProperties": {
            "^[^,]+(,[^,]+)*$": { "$ref": "#/definitions/nest" }
          },
          "additionalProperties": false
        }
      }
    },
    "member": {
      "title": "Member",
      "type": "object",
      "properties": {
        "gender": {
          "title": "Gender",
          "type": "integer",
          "enum": [0, 1, 2],
          "enumNames": ["Unknown or ambiguous", "Male", "Female"]
        },
        "proband": {
          "title": "Proband",
          "type": "boolean"
        },
        "consultand": {
          "title": "Consultand",
          "type": "boolean"
        },
        "dateOfBirth": {
          "title": "Date of birth",
          "type": "string",
          "format": "date"
        },
        "dateOfDeath": {
          "title": "Date of death",
          "type": "string",
          "format": "date"
        },
        "deceased": {
          "title": "Deceased",
          "type": "boolean"
        },
        "affected": {
          "title": "Affected",
          "type": "boolean"
        }
      }
    },
    "nest": {
      "title": "Nest",
      "type": "object",
      "required": ["pregnancies"],
      "properties": {
        "pregnancies": {
          "title": "Pregnancies",
          "type": "array",
          "items": { "$ref": "#/definitions/pregnancy" }
        },
        "consanguineous": {
          "title": "Consanguineous",
          "type": "boolean"
        }
      }
    },
    "pregnancy": {
      "title": "Pregnancy",
      "type": "object",
      "required": ["children"],
      "properties": {
        "children": {
          "title": "Children",
          "type": "array",
          "items": {
            "title": "Child",
            "type": "string",
            "pattern": "^[^,]+$"
          }
        },
        "zygotes": {
          "title": "Zygotes",
          "type": "array",
          "items": {
            "title": "Zygote",
            "type": "integer"
          }
        }
      }
    }
  }
}

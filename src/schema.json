{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$ref": "#/definitions/pedigree",
  "definitions": {
    "pedigree": {
      "title": "Pedigree",
      "description": "Schema for Pedigree",
      "type": "object",
      "required": ["title", "members", "nests"],
      "properties": {
        "title": {
          "title": "Title",
          "type": "string"
        },
        "members" : {
          "title": "Members",
          "description": "Members in a pedigree.",
          "type": "object",
          "patternProperties": {
            "^[^,]+$": { "$ref": "#/definitions/member" }
          },
          "additionalProperties": false
        },
        "nests": {
          "title": "Nests",
          "description": "Relationship units in a pedigree.",
          "type": "object",
          "patternProperties": {
            "^[^,]+(,[^,]+)*$": { "$ref": "#/definitions/nest" }
          },
          "additionalProperties": false
        },
        "schemaExtension": {
          "$ref": "http://json-schema.org/draft-04/schema#"
        }
      }
    },
    "member": {
      "title": "Member",
      "type": "object",
      "properties": {
        "gender": {
          "title": "Gender",
          "type": "integer",
          "enum": [0, 1, 2],
          "enumNames": ["Unknown or ambiguous", "Male", "Female"]
        },
        "proband": {
          "title": "Proband",
          "type": "boolean"
        },
        "consultand": {
          "title": "Consultand",
          "type": "boolean"
        }
      }
    },
    "nest": {
      "title": "Nest",
      "type": "object",
      "required": ["pregnancies"],
      "properties": {
        "pregnancies": {
          "title": "Pregnancies",
          "type": "array",
          "items": { "$ref": "#/definitions/pregnancy" },
          "additionalItems": false
        },
        "consanguineous": {
          "title": "Consanguineous",
          "type": "boolean"
        }
      }
    },
    "pregnancy": {
      "title": "Pregnancy",
      "type": "object",
      "required": ["zygotes"],
      "properties": {
        "zygotes": {
          "title": "Zygotes",
          "type": "array",
          "items": {
            "title": "Zygote",
            "type": "string",
            "pattern": "^[^,]+$"
          },
          "additionalItems": false
        },
        "monozygotic": {
          "title": "Monozygotic",
          "type": "boolean"
        }
      }
    }
  }
}
